									"    ",
									"    // Extract tokens from cookies",
									"    const cookies = pm.cookies.all();",
									"    const accessTokenCookie = cookies.find(c => c.name === 'accessToken');",
									"    const refreshTokenCookie = cookies.find(c => c.name === 'refreshToken');",
									"    ",
									"    if (accessTokenCookie) {",
									"        pm.environment.set('accessToken', accessTokenCookie.value);",
									"    }",
									"    if (refreshTokenCookie) {",
									"        pm.environment.set('refreshToken', refreshTokenCookie.value);",
									"    }",
									"    ",
									"    // Store user data",
									"    if (jsonData.user) {",
									"        pm.environment.set('userId', jsonData.user.id);",
									"        pm.environment.set('userEmail', jsonData.user.email);",
